                        <img src="\img\<%= product.img %>" alt="Luces" class="preview__img__img">
                    </article>
                    <div class="preview__txt">
                        <p class="h2_preview_txt2">
                            <%= product.name %>
                        </p>
                        $<%= product.price %>
                            </p>

                            <form action="/product/detail" method="POST">
                                <p>En <select name="mes">
