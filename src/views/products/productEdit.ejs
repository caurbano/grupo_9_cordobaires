<!DOCTYPE html>
<html lang="en">
 <%- include('../partials/head') %>
<body>

    <!--HEADER-->

    <%- include('../partials/header') %>

    <!--MAIN-->

    <main class="background-main-form">
        <div class="main-form">
        <p>Editar de producto</p>
        <article>
            <form action="/product/edit?_method=PUT" method="post" class="form" enctype="multipart/form-data">
                <div class="register">
                    <label class="form-title">Nombre del producto</label>
                    <input type="text" class="validate" name="name" required="required" pattern="{0,11}" placeholder = "<%= product.name %>">
                </div>
                <div class="register">
                    <label class="form-title">Descripcion del producto</label>
                    <textarea name="description" rows="4" cols="50" placeholder = "<%= product.description %>"></textarea>
                </div>
                <div class="register">
                    <label class="form-title">Foto del producto</label>
                    <img src="\img\<%= product.img %>">
                    <input type="file" name="Foto" accept=".jpg" multiple>
                </div>
                <div class="register">
                    <label class="form-title">Categoria</label>
                    <div class="register-radio">
                        <input type="radio" name="category" value="Techo" required="required">
                        <label>Techo</label>
                    </div>
                    <div class="register-radio">
                        <input type="radio" name="category" value="Pared" required="required">
                        <label>Pared</label>
                    </div>
                    <div class="register-radio">
                        <input type="radio" name="category" value="Pie" required="required">
                        <label>Pie</label>
                    </div>
                </div>
                <div class="register">
                    <label class="form-title">Color</label>
                    <input type="text" class="validate" name="color" required="required" placeholder = "Color">
                </div>
                <div class="register">
                    <label class="form-title">Precio</label>
                    <input type="number" class="validate" name="price" required="required" placeholder = "<%= product.price %>">
                </div>
                <div class="register">
                    <label class="form-title">Cuotas maxima</label>
                    <input type="number" class="validate" name="price" required="required" placeholder = "<%= product.payments %>">
                </div>
                <div class="confirm">
                    <button type="submit"><p>Cancelar</p></button>
                    <button type="submit"><p>Confirmar</p></button>
                </div>
            </form>
            <form action="/product/edit?_method=DELETE" method="post" class="form">
                <div class="confirm">
                    <button type="submit"><p>Eliminar producto</p></button>
                </div>
            </form>
        </article>
        </div>
    </main>

    <!--FOOTER-->

    <%- include('../partials/footer') %>
    
</body>
</html>