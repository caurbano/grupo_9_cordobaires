<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>

    <!--HEADER-->
    <%- include('../partials/header') %>

    <main class="users_main">
        <h3>Lista de usuarios</h3>
        <% for( let i = 0; i < users.length; i++ ) { %>
        <article class="users_list">
            <section class="users_img">
                <!-- Ver si dejar esta section o dejar solo la img -->
                <img src="/img/users/<%= users[i].img %>" alt="Imagen de usuario">
            </section>
            
            <section class="users_data">
                 <h4>
                    <%= users[i].firstName %> <%= users[i].lastName %> (id:<%= users[i].id %>)
                 </h4>
                 <p>Email: <%= users[i].email %></p>
                 <p>Tel√©fono: <%= users[i].phone %></p>
            </section>
        
            <section class="users_options">
                <% if(userLogged.admin) {%>
                <button class="back_button"><p>Dar admin</p></button>
                <% } %>
                <a href="../user/edit/<%- users[i].id %>"><i class="fa-solid fa-pen-to-square" id="edit"></i></a>
                
                <form action="/user/delete/<%= users.id %>?_method=DELETE" method="post" class="form">
                    <!-- <button type="submit" class="deleteButton"> -->
                        <a href="../user/list"><i class="fa-solid fa-trash" id="delete"></i></a>
                    <!-- </button> -->
                </form>
            </section>
        </article>
        <% } %>
           

    </main>

    <!--FOOTER-->

    <%- include('../partials/footer') %>
</body>
</html>