<!DOCTYPE html>
<html lang="en">
 <%- include('../partials/head') %>
<body>

    <!--HEADER-->

    <%- include('../partials/header') %>

    <!--MAIN-->

    <main class="background-main-form">
        <section class="main-form">
            <p>Crear cuenta</p>
            <h3>Comprá más rápido y llevá el control de tus pedidos!</h3>
            <form action="/user/register" method="post" class="form" enctype="multipart/form-data">
                <section class="register">
                    <input type="text" class="validate" name="first_name"  pattern="{0,11}" placeholder = "Nombre" value= "<%= locals.old && old.first_name ? old.first_name : '' %>">
                    <% if ( locals.error && error.first_name ){ %>
                        <p class="error"><%= error.first_name.msg %></p>
                    <% } %>
                </section>
                <section class="register">
                    <input type="text" class="validate" name="last_name"  placeholder = "Apellido" value= "<%= locals.old && old.last_name ? old.last_name : '' %>">
                    <% if ( locals.error && error.last_name ){ %>
                        <p class="error"><%= error.last_name.msg %></p>
                    <% } %>
                </section>
                <section class="register">
                    <input type="text" class="validate" name="email"  placeholder = "Email" value= "<%= locals.old && old.email ? old.email : '' %>">
                    <% if ( locals.error && error.email ){ %>
                        <p class="error"><%= error.email.msg %></p>
                    <% } %>
                </section>
                <section class="register">  
                    <input type="text" class="validate" name="phone" placeholder = "Teléfono" value= "<%= locals.old && old.phone ? old.phone : '' %>">
                    <% if ( locals.error && error.phone ){ %>
                        <p class="error"><%= error.phone.msg %></p>
                    <% } %>
                </section>
                <section class="register">
                    <input type="password" class="validate" name="password" placeholder = "Contraseña" >
                    <!-- <small class="pass">Introducir por lo menos 8 caracteres</small> -->
                    <% if ( locals.error && error.password ){ %>
                        <p class="error"><%= error.password.msg %></p>
                    <% } %>
                </section>
                <section class="register">
                    <input type="password" class="validate" name="confirm_password"  placeholder = "Confirmar contraseña" >
                    <% if ( locals.error && error.password ){ %>
                        <p class="error"><%= error.password.msg %></p>
                    <% } %>
                </section>
                <section class="register">
                    <label class="form-title">Imagen de perfil</label>
                    <input type="file" name="img" accept=".jpg, .jpeg, .png .gif" multiple >
                    <% if ( locals.error && error.img ){ %>
                        <p class="error"><%= error.img.msg %></p>
                    <% } %>
                </section>
                <section class="confirm">
                    <section class="g-recaptcha" data-sitekey="6LcePAATAAAAAGPRWgx90814DTjgt5sXnNbV5WaW"></section>
                    <button type="submit"><p>Crear cuenta</p></button>
                </section>
                </form>
        </section>
    </main>

    <script src="/js/users.js"></script>
    <!--FOOTER-->

    <%- include('../partials/footer') %>
    
</body>
</html>