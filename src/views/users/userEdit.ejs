<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body>

        <!--HEADER-->

        <%- include('../partials/header') %>

            <!--MAIN-->

            <main class="background-main-form">
                <section class="main-form">
                    <p>Editar usuario</p>
                    <form action="/user/edit?_method=PUT" method="post" class="form" enctype="multipart/form-data">
                        <section class="register">
                            <input type="text" class="validate" name="firstName" pattern="{0,11}" value="<%= userLogged.firstName %>" >
                        </section>
                        <section class="register">
                            <input type="text" class="validate" name="lastName" pattern="{0,11}" value="<%= userLogged.lastName %>"
                                >
                        </section>
                        <section class="register">
                            <input type="email" class="validate" name="email" pattern="{0,11}" value="<%= userLogged.email %>"
                                >
                        </section>
                        <section class="register">
                            <input type="tel" class="validate" name="phone" pattern="[0-9]{1,11}" value="<%= userLogged.phone %>"
                                >
                        </section>
                        <section class="register">
                            <input type="password" class="validate" name="password" placeholder="Ingresa tu contraseña">
                        </section>
                        <section class="register">
                            <input type="password" class="validate" name="confirm_password" placeholder="Confirmar contraseña" >
                        </section>
                        <section class="register">
                            <label class="form-title">Imagen de perfil</label>
                            <section class="img">
                                <img src="/img/users/<%= userLogged.img %>" width="100%">
                            </section>
                            <input type="file" name="img" accept=".jpg" multiple>
                        </section>
                        <section class="confirm">
                            <button type="button">
                                <a href="/user/profile"><p class="button_text">Cancelar</p></a>
                            </button>
                            <button type="submit">
                                <p class="button_text">Confirmar</p>
                            </button>
                        </section>
                    </form>
            <form action="/user/delete?_method=DELETE" method="post" class="form">
                    <button type="submit" class="deleteButton"><p>Eliminar cuenta</p></button>
            </form>
                </section>
            </main>

            <!--FOOTER-->

            <%- include('../partials/footer') %>

    </body>

</html>